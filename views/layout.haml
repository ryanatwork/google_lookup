      })();

  %body
    .container-narrow
      .masthead
        %ul{:class=> "nav nav-pills pull-right"}
          %li.active
            <a href="/">Home</a>
        %h3.muted Polling Places

        %hr

        = yield

      .footer

        Data from the <a href="https://developers.google.com/civic-information/" target="_blank">Google Civic Information API</a>
